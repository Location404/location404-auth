{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "UserIdentityDatabaseDevelopment": "",
    "Cache": ""
  },
  "OpenTelemetry": {
    "ServiceName": "user-identity-service",
    "ServiceVersion": "0.0.1",
    "ServiceNamespace": "user-identity",
    // "Environment": "production",
    "CollectorEndpoint": "http://optel-collector:4317",
    "ResourceAttributes": {
      "team": "location404",
      "application": "user-identity"
    },
    "Tracing": {
      "Enabled": true,
      "SamplingRatio": 0.1,
      "RecordExceptions": true,
      "EnableGrpcSupport": false,
      "IgnorePaths": [
        "/health",
        "/metrics", 
        "/ready",
        "/live",
        "/scalar"
      ],
      "IgnoreHosts": [
        "localhost",
        "127.0.0.1"
      ],
      "BatchExport": {
        "MaxQueueSize": 2048,
        "ScheduledDelayMilliseconds": 5000,
        "ExporterTimeoutMilliseconds": 30000,
        "MaxExportBatchSize": 512
      }
    },
    "Metrics": {
      "Enabled": true
      // "CustomMeters": [
      //   "Exemple.Business.*",
      //   "Exemple.Infrastructure.*"
      // ]
    },
    "Logging": {
      "Enabled": true,
      "IncludeFormattedMessage": true,
      "IncludeScopes": true,
      "ParseStateValues": true
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "OpenTelemetry": "Warning"
    }
  },
  "JwtSettings": {
    "Issuer": "location404",
    "Audience": "location404",
    "SigningKey": "super_secret_key_for_development_purposes_only_change_me",
    "AccessTokenMinutes": 60,
    "RefreshTokenMinutes": 1440
  },
    "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173"
    ]
  }
}